{
  "project_info": {
    "name": "hourly-worth",
    "framework": "React + Vite",
    "styling": "Tailwind CSS",
    "package_manager": "pnpm",
    "last_updated": "2024-04-06",
    "i18n": {
      "enabled": true,
      "library": "react-i18next",
      "languages": ["pt-BR", "en-US"],
      "default_language": "pt-BR"
    },
    "deployment": {
      "platform": "GitHub Pages",
      "url": "https://jonatas.github.io/hourly-worth",
      "build_command": "pnpm run build",
      "deploy_command": "pnpm run deploy"
    },
    "changelog": {
      "generator": "semantic-release",
      "preset": "angular",
      "sections": [
        "Features",
        "Bug Fixes",
        "Documentation",
        "Styles",
        "Code Refactoring",
        "Performance Improvements",
        "Tests",
        "Chores"
      ]
    },
    "lint": {
      "commitlint": {
        "extends": "@commitlint/config-conventional",
        "rules": {
          "type-enum": [
            "feat",
            "fix",
            "docs",
            "style",
            "refactor",
            "perf",
            "test",
            "chore",
            "ci",
            "revert"
          ],
          "max_length": 500,
          "case": "lower-case"
        }
      },
      "eslint": {
        "extends": ["@eslint/js", "typescript-eslint"],
        "plugins": ["react-hooks", "react-refresh"],
        "rules": {
          "typescript": {
            "ecmaVersion": 2020,
            "globals": "browser"
          },
          "javascript": {
            "ecmaVersion": 2020,
            "globals": "node",
            "no-console": "warn",
            "no-unused-vars": "warn"
          },
          "json": {
            "ecmaVersion": 2020,
            "no-unused-expressions": "off"
          },
          "markdown": {
            "ecmaVersion": 2020,
            "no-unused-expressions": "off"
          }
        }
      }
    }
  },
  "configuration_files": {
    "tailwind": {
      "config_file": "tailwind.config.js",
      "postcss_file": "postcss.config.js",
      "main_css": "src/index.css"
    },
    "i18n": {
      "config_file": "src/i18n/i18n.ts",
      "locales_dir": "src/i18n/locales",
      "locales": ["pt-BR.json", "en-US.json"],
      "types_file": "src/i18n/locales/types.d.ts"
    },
    "typescript": {
      "config_file": "tsconfig.json",
      "app_config": "tsconfig.app.json",
      "node_config": "tsconfig.node.json"
    }
  },
  "dependencies": {
    "devDependencies": {
      "tailwindcss": "^4.1.3",
      "@tailwindcss/postcss": "^4.1.3",
      "postcss": "^8.5.3",
      "autoprefixer": "^10.4.21"
    },
    "dependencies": {
      "i18next": "^24.2.3",
      "react-i18next": "^15.4.1",
      "i18next-browser-languagedetector": "^8.0.4"
    }
  }
} 